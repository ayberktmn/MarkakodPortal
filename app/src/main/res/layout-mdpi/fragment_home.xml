<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment" >

    <Button
        android:id="@+id/btnSend"
        android:layout_width="103dp"
        android:layout_height="37dp"
        android:layout_marginStart="52dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/shape"
        android:text="@string/paylas"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.704"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView3"
        app:layout_constraintVertical_bias="0.051" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_slider"
        app:layout_constraintVertical_bias="0.19">

        <EditText
            android:id="@+id/editTextText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape"
            android:digits="ğüşıöçĞÜŞİÖÇ abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789"
            android:ems="10"
            android:gravity="center"
            android:hint="Ne düşünüyorsun..."
            android:inputType="textMultiLine" />
    </androidx.cardview.widget.CardView>

    <View
        android:id="@+id/viewSocialMedia"
        android:layout_width="239dp"
        android:layout_height="49dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSend"
        app:layout_constraintVertical_bias="0.362" />

    <com.denzcoskun.imageslider.ImageSlider
        android:id="@+id/image_slider"
        android:layout_width="169dp"
        android:layout_height="112dp"
        app:iss_auto_cycle="true"
        app:iss_corner_radius="30"
        app:iss_delay="2000"
        app:iss_period="1000"
        app:iss_text_align="CENTER"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.096" />

    <ImageView
        android:id="@+id/imgTwitter"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/twitter"
        app:layout_constraintBottom_toBottomOf="@+id/viewSocialMedia"
        app:layout_constraintStart_toStartOf="@+id/viewSocialMedia"
        app:layout_constraintTop_toTopOf="@+id/viewSocialMedia" />

    <ImageView
        android:id="@+id/imgInstagram"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/instagram"
        app:layout_constraintBottom_toBottomOf="@+id/viewSocialMedia"
        app:layout_constraintStart_toEndOf="@+id/imgTwitter"
        app:layout_constraintTop_toTopOf="@+id/viewSocialMedia" />

    <ImageView
        android:id="@+id/imgFacebook"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/facebook"
        app:layout_constraintBottom_toBottomOf="@+id/viewSocialMedia"
        app:layout_constraintStart_toEndOf="@+id/imgInstagram"
        app:layout_constraintTop_toTopOf="@+id/viewSocialMedia" />

    <ImageView
        android:id="@+id/imgLinkedin"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/linkedinn"
        app:layout_constraintBottom_toBottomOf="@+id/viewSocialMedia"
        app:layout_constraintStart_toEndOf="@+id/imgFacebook"
        app:layout_constraintTop_toTopOf="@+id/viewSocialMedia" />

    <ImageView
        android:id="@+id/imgThreads"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:foreground="@drawable/shape"
        android:src="@drawable/threads"
        app:layout_constraintBottom_toBottomOf="@+id/viewSocialMedia"
        app:layout_constraintStart_toEndOf="@+id/imgLinkedin"
        app:layout_constraintTop_toTopOf="@+id/viewSocialMedia" />

</androidx.constraintlayout.widget.ConstraintLayout>