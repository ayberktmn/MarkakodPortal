<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MarkakodPortal" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/Red</item>
        <item name="colorPrimaryVariant">@color/Red</item>
        <item name="colorOnPrimary">@color/white</item> <!-- Text rengi beyaz -->
        <item name="colorAccent">@color/Red</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/Red</item>
        <item name="colorOnSecondary">@color/white</item> <!-- Text rengi beyaz -->
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <!-- Button style -->
        <item name="materialButtonStyle">@style/RedButtonStyle</item>
        <!-- Text color for TextViews -->
        <item name="android:textColor">@color/white</item> <!-- Text rengi beyaz -->
    </style>

    <!-- Red Button Style -->
    <style name="RedButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item> <!-- Buton metin rengi beyaz -->
    </style>
    <style name="ShapeAppearanceOverlay.MyApp.FloatingActionButton.Rounded" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="NoUnderlineEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
    </style>
</resources>
