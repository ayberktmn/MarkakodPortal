<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- stroke özelliği, dikdörtgenin kenarlarının çizgi kalınlığını ve rengini belirtir -->
    <stroke
        android:width="1dp"
        android:color="@color/black" />

    <!-- corners özelliği, dikdörtgenin köşelerinin yuvarlaklık yarıçapını belirtir -->
    <corners android:radius="1dp" />  <!-- Köşe yarıçapı 15dp olarak ayarlanmış -->
</shape>